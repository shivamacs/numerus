                    </div>
                </div>
            </div>
            <div class="formula-bar">
                <input type="text" id="range">
                <div id="separator">fx</div>
                <input type="text" id="formula">
            </div>
            <div class="content">
                <div id="tl-cell"></div>
                <div class="first-row">
                    <% for(let j = 0; j < columns; j++) { %>
                        <div class="cell column-header" id='<%= String.fromCharCode("A".charCodeAt(0) + j) %>' data-y="<%= j %>"><%= String.fromCharCode("A".charCodeAt(0) + j) %></div>
                    <% } %>
                </div>
                <div class="first-col">
                    <% for(let i = 0; i < rows; i++) { %>
                        <div class="row-header" id="<%= i %>"><%= i + 1 %></div>
                    <% } %>
                </div>
                <div class="grid">
                    <% for(let i = 0; i < rows; i++) { %>
                        <div class="row" data-x="<%= i %>">
                            <% for(let j = 0; j < columns; j++) { %>
                                <span class="cell data-cell" role="textbox" tabIndex="0" data-x="<%= i %>" data-y="<%= j %>" contenteditable="false"></span>
                            <% } %>
                        </div>
                    <% } %>
                </div>
            </div>
            <div class="sheets-bar">
                <div id="curr-sheet">Sheet 1</div>
                <div id="add-sheet">+</div>
            </div>
        </div>
        <script src="renderer.js"></script>
    </body>
</html>